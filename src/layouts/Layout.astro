---
import Footer from "../components/Footer.astro";
import NavBar from "../components/NavBar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="I offer bespoke, hand-drawn watercolor animations in a whimsical, unique style. As an independent artist, I create personalized storytelling animations that capture special moments. Perfect for custom art, animated invitations, and unique gifts."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      type="text/css"
      href="//fonts.googleapis.com/css?family=Amatic+SC"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <NavBar />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  html {
    width: 100%;
    height: 100%;
    font-family: "Amatic SC", sans-serif;
    background: url("background.png");
    background-size: cover;
  }
  button,
  textarea,
  input {
    font-family: "Amatic SC", sans-serif;
  }
</style>
