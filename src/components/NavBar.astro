---
import { colors } from "../theme";
export const theme = colors;
---

<style>
  :root {
    --black: ${theme.black};
  }
  nav {
    width: 100%;
    display: flex;
    align-items: center;
    flex-direction: column;
    font-size: 60px;
    color: var(--black);
  }

  .contentDesktop {
    display: flex;
    justify-content: space-between;
    width: 100%;
    max-width: 800px;
  }

  .contentMobile {
    display: flex;
    justify-content: center;
    max-width: 800px;
  }

  .linkContainerMobile {
    display: flex;
  }

  .linkContainer {
    display: flex;
    width: 300px;
    justify-content: space-between;
  }

  .iconContainer {
    display: flex;
  }

  .icons {
    width: 70px;
    height: 70px;
    padding: 10px;
  }

  .link {
    color: var(--black);
    text-decoration: none;
  }

  .logo {
    width: 100%;
    height: 500px;
  }

  @media (max-width: 900px) {
    .contentDesktop {
      display: none;
    }

    .contentMobile {
      display: flex;
    }
  }

  @media (min-width: 901px) {
    .contentMobile {
      display: none;
    }

    .contentDesktop {
      display: flex;
    }
  }
</style>

<nav>
  <a class="link" href={`/`}>
    <img class="logo" src="logo/stacked-whimsy-logo.svg" alt="logo" />
  </a>
  <div class="contentMobile">
    <div class="linkContainerMobile">
      <a href="/contact" class="link">
        <img class="icons" src="icons/contact-icon.svg" alt="contact" />
      </a>
      <a href="/about" class="link">
        <img class="icons" src="icons/info-icon.svg" alt="about" />
      </a>
    </div>
    <div class="iconContainer">
      <a
        href="https://www.tiktok.com/@whimsbynada?_t=8pqqDSTFlHl&_r=1"
        class="link"
      >
        <img
          class="icons"
          src="icons/tiktok-black-icon-seeklogo.svg"
          alt="tiktok"
        />
      </a>
      <a href="https://www.instagram.com/whimsybynada/?hl=en-gb" class="link">
        <img
          class="icons"
          src="icons/black-instagram-icon.svg"
          alt="instagram"
        />
      </a>
    </div>
  </div>
  <div class="contentDesktop">
    <div class="linkContainer">
      <a href="/contact" class="link">Contact</a>
      <a href="/about" class="link">About</a>
    </div>
    <div class="iconContainer">
      <a
        href="https://www.tiktok.com/@whimsbynada?_t=8pqqDSTFlHl&_r=1"
        class="link"
      >
        <img
          class="icons"
          src="icons/tiktok-black-icon-seeklogo.svg"
          alt="tiktok"
        />
      </a>
      <a href="https://www.instagram.com/whimsybynada/?hl=en-gb" class="link">
        <img
          class="icons"
          src="icons/black-instagram-icon.svg"
          alt="instagram"
        />
      </a>
    </div>
  </div>
</nav>
